void RmtSync()
{
  LTChnl *chnl;
  CommClose(1);
  chnl=CommOpen8N1(1,COMM_BAUD);
  if (chnl) {
    RmtMergeChk(chnl);
    CommClose(1);
  }
}

void RmtSyncDrive(I1 drive=0)
{
  LTChnl *chnl;
  Drive(drive);
  CommClose(1);
  chnl=CommOpen8N1(1,COMM_BAUD);
  if (chnl) {
    RmtMergeChk(chnl,"/LT/*","/LT/*",
	"+r+t+a");
    CommClose(1);
  }
}

I1 *TADPickFile(I1 *msg,I1 *mask,I8 prefix_len=0)
{
  I8 i=0;
  LTDirEntry *tempm,*tempm1;
  Ltf *l=LtfNew;
  I1 *st;
  tempm=FindFiles(mask);
  tempm1=tempm;
  if (msg)
    LtfPutSExt(l,msg);
  while (tempm1) {
    if ((i++%5)==0)
      LtfPutSExt(l,"\r\n");
    st=NewStr(tempm1->name);
    RemoveLastSeg(st,".");
    LtfPrintF(l,"$$MU,\"%-8ts\",%d$$ ",st+prefix_len,tempm1);
    Free(st);
    tempm1=tempm1->next;
  }
  tempm1=PopUpMenu(l);
  LtfDel(l);
  if (tempm1<0)
    st=NULL;
  else
    st=NewStr(tempm1->full_name);
  DelLTDirList(tempm);
  return st;
}

