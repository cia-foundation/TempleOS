#define COMM_BAUD	38400*3

void Tx(I1 *filename)
{
  LTChnl *chnl;
  CommClose(1);
  chnl=CommOpen8N1(1,COMM_BAUD);
  if (chnl) {
    RmtTxFile(chnl,filename);
    CommClose(1);
  }
}

void Rx(I1 *filename)
{
  LTChnl *chnl;
  CommClose(1);
  chnl=CommOpen8N1(1,COMM_BAUD);
  if (chnl) {
    RmtRxFile(chnl,filename);
    CommClose(1);
