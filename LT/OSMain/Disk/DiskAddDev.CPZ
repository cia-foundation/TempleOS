  for (i=0;i<32;i++)
    drive_to_partition[i]=&local_partitions[i];
  dc_col=0;

  #exe {
    I8 base_partition,type,drive_letter,k,n,num=0;
    I1 buf[32],buf2[128],buf3[128],buf4[128];
    BoolU4 format;
    PutSysText("ST_ADDDRIVES0");
    do {
