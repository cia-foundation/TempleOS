  fdc_retries=2;
  fdc_drive_heads=2;
  fdc_disk_cylinders=80;
  fdc_disk_sectors=18;
  fdc_max_sector=fdc_drive_heads*fdc_disk_cylinders*fdc_disk_sectors-1;
  fdc_dma_buf=0xD000;
  ext[EXT_IRQ06]=&Irq06Handler;

  ext[EXT_IRQ0B]=&Irq0BHandler;
  ext[EXT_IRQ0E]=&Irq0EHandler;
  ext[EXT_IRQ0F]=&Irq0FHandler;

