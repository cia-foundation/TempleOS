	PUSH	RDX
	PUSH	RAX
	CALL	ALLOCATE_HC_MEM_BLKS
	MOV	RSI,RAX
	ADD	RSP,16
	POP	RAX
	POP	RDX

	LEA	RSI,U8 MB_STRUCT_SIZE[RSI]
	SHL	RAX,PAGE_BITS
	SUB	RAX,MB_STRUCT_SIZE
