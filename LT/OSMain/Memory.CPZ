CP_FREE_HC::
	PUSH	RBP
	MOV	RBP,RSP
	PUSH	RSI
	PUSH	RDI

	BT	U4 [SYS_SEMAS+SYS_SEMA_HEAPLOG*SEMA_STRUCT_SIZE],0
	JNC	@@1
	PUSH_C_REGS
	PUSH	U8 SF_PARAM1[RBP]
