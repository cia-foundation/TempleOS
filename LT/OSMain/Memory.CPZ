	JZ	@@2
	CALL	RAX
@@2:	ADD	RSP,8
	POP_C_REGS

@@1:	MOV	RSI,U8 SF_PARAM1[RBP]
	OR	RSI,RSI
	JZ	U4 @@100
	XOR	EBX,EBX
	MOV	RDX,U8 SF_PARAM2[RBP]
	OR	RDX,RDX
	JNZ	@@30
	MOV	RDX,U8 FS:TSS_ABSOLUTE_ADDRESS[RBX]
