	CALL	CP_BAD_MEM_FREE
	ADD	RSP,8
	POP_C_REGS
	JMP	@@101
@@10:	XOR	EAX,EAX
	MOV	RAX,U8 UM_SIZE[RSI]
	CMP	RAX,HEAP_HASH_SIZE
	JAE	@@5
	MOV	U8 UUM_SIZE[RSI],RAX
	MOV	RBX,U8 HC_HEAP_HASH[RAX+RDX]
	MOV	U8 UUM_NEXT[RSI],RBX
	MOV	U8 HC_HEAP_HASH[RAX+RDX],RSI
