	MOV	EBP,ESP
	MOV	EAX,SF_PARAM1[EBP]
	MOV	U4 EXCEPT_ESI[EAX],ESI
	MOV	U4 EXCEPT_EDI[EAX],EDI
	POP	EBP
	RET
};

