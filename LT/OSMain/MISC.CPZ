void Beeps(U8 j,BoolU4 busy)
{
  U8 i,f;
  for (i=0;i<8;i++) {
    if (Bt(&j,i+24)) {
      f=200;
      if (Bt(&j,i+8))
	f+=400;
      if (Bt(&j,i+16))
	f+=800;
      Sound(f);
      if (busy) {
	if (Bt(&j,i))
	  BusyWait(300000);
	else
	  BusyWait(100000);
      } else {
	if (Bt(&j,i))
	  Sleep(400);
	else
	  Sleep(150);
      }
      Sound(0);
    }
    if (busy)
      BusyWait(150000);
    else
      Sleep(300);
  }
}

void UnrecoverableSysError(U8 j)
{
  Cli;
  while (TRUE) {
    Beeps(j,TRUE);
    Raw(ON);
    coutln "Unrecoverable SysError:",j;
    BusyWait(500000);
  }
}

