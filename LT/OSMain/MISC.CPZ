U8 ReadSysTimer()
{
  U8 i,old_flags=GetFlags;
  U8 result;
  Cli;
  OutP(0x43,0); //Latch Timer0
  i=InP(0x40);
  i+=(InP(0x40)<<8);
  result=sys_timer+SYS_TIMER0_PERIOD-i;
  SetFlags(old_flags);
  return result;
}

U8 ExceptDepth(TssStruct *tss=NULL)
{
  U8 result=0;
  ExceptStruct *tempt;
  if (!tss) tss=Fs;
  tempt=tss->next_except;
  while (tempt!=&tss->next_except) {
    result++;
    tempt=tempt->next;
  }
  return result;
}

