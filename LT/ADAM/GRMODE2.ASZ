	MOV	EDI,U4 [EAX]		//EDI=dst

@@10:	XOR	EAX,EAX
	TEST	U4 SF_PARAM1[EBP],EDX
	JZ	@@20
	DEC	EAX

@@20:	MOV	U1 [EDI],AL
	ADD	EDI,EBX
	MOV	U1 [EDI],AL
	ADD	EDI,EBX
	MOV	U1 [EDI],AL
	ADD	EDI,EBX
	MOV	U1 [EDI],AL
