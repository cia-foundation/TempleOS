	JC	@@100
@@1:	MOV	EAX,U4 FS:[TSS_UPDATE_WINDOW]
	OR	EAX,EAX
	JZ	@@2
	CALL	EAX
@@2:	BT	U4 [SYS_FLAGS],SYSf_TASK_LINKS_ALTERED
	JC	@@100
	MOV	EDI,U4 FS:[TSS_NEXT_TSS]
	CMP	ESI,EDI
	JNE	@@10
@@100:	MOV	EAX,U4 TSS_FS[ESI]
	MOV	FS,AX
	POPAD				//+****
