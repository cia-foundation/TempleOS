CP_PLOT_SCREEN_I1::
	PUSH	EBP
	MOV	EBP,ESP
	MOV	EBX,SF_PARAM2[EBP]
	MOV	EAX,SF_PARAM3[EBP]
	OR	EBX,EBX
	JS	@@100
	OR	EAX,EAX
	JS	@@100
	CMP	EBX,U4 FS:[TSS_CRT_WIDTH]
	JGE	@@100
	CMP	EAX,U4 FS:[TSS_CRT_HEIGHT]
	JGE	@@100
	IMUL	U4 FS:[TSS_CRT_WIDTH]
	ADD	EAX,U4 [SYS_TEXTBASE]
