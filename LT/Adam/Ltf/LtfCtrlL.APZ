      }
    } else {
      if (DoForm(el,"EditPageSettingStruct")) {
	if (*el->value)
	  PrintF("$$%Z,%s$$",type,"ST_LTF_CMDS",el->value);
	else
	  PrintF("$$%Z$$",type,"ST_LTF_CMDS");
      }
    }
  }
  Free(el2);
  Free(el);
}

