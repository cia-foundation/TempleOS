    LtfPutSExt(l,"$$MU,\"Place Anchor\",LK_PLACE_ANCHOR$$\r\n");
  LtfPutSExt(l,"$$MU,\"CANCEL\",-1$$");
  i=PopUpMenu(l);
  LtfDel(l);
  return i;
}

