  LtfPutSExt(l,"$$MU,\"Macro\",2$$\r\n");
  LtfPutSExt(l,"$$MU,\"Menu Item\",3$$\r\n");
  LtfPutSExt(l,"$$MU,\"Link\",4$$\r\n");
