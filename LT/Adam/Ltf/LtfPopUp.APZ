void LTDirEntryToFileLtf(Ltf *l,LTDirEntry *tempm)
{
  LtfEntry *ll;
  while (tempm) {
    if (tempm->attr & LT_ATTR_DIR) {
      ll=LtfPrintF(l,"$$TR,\"%s\"$$",tempm->name);
      ll->user_data=tempm;
      LtfPutSExt(l,"\r\n$$ID,+2$$");
      if (tempm->sub)
	LTDirEntryToFileLtf(l,tempm->sub);
      LtfPutSExt(l,"$$ID,-2$$");
    } else
      LtfPrintF(l,"$$MU,\"%s\",0x%08X$$\r\n",
	tempm->name,tempm);
    tempm=tempm->next;
  }
}

