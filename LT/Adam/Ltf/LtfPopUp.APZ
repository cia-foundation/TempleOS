  GetFFlags(&f,SysText("ST_FILE_UTIL_FLAGS"),"+r");
  GetFFlags(&f,SysText("ST_FILE_UTIL_FLAGS"),flags);
  tempm=FindFiles(mask,f);
  LtfPutSExt(l,"$$TR-C+AL,\"\"$$\r\n");
  LtfPutSExt(l,"$$ID,+2$$");
  LTDirEntryToFileLtf(l,tempm);
  LtfPutSExt(l,"$$ID,-2$$");
  tempm1=PopUpMenu(l);
  if (tempm1<MAX_I4)
    result=NewStr(tempm1->full_name);
  else
    result=NewStr("");
  LtfDel(l);
  DelLTDirList(tempm);
  return result;
}

